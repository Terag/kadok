{
    "name": "kadok",
    "version": "0.1.0",
    "description": "Kadok is a bot developed for the Discord Guild \"Les petits pedestres\". It aims to provide fun and useful functionnalities for the Guild Members.",
    "main": "main.go",
    "repository": "https://gitlab.beyond-undefined.fr/rouquette/kadok",
    "author": "Victor Rouquette <victor@rouquette.me>",
    "license": "GPL-3.0",
    "private": false,
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@redocly/cli": "^1.0.0-beta.107",
        "@stoplight/spectral-cli": "^6.5.0",
        "husky": "^8.0.1",
        "pinst": "^3.0.0"
    },
    "scripts": {
        "oas:dev:watch": "redocly preview-docs --config .redocly.yaml oas/openapi.yaml",
        "oas:lint:redocly": "redocly lint --config .redocly.yaml --format stylish oas/openapi.yaml",
        "oas:lint:spectral": "spectral lint --ruleset .spectral.yaml --format stylish oas/generated/openapi.yaml",
        "oas:bundle": "redocly bundle --config .redocly.yaml --ext json --output oas/generated/openapi.json oas/openapi.yaml",
        "oas:render": "redoc-cli build --disableGoogleFont -o oas/generated/openapi.html oas/generated/openapi.json",
        "oas:codegen:types": "oapi-codegen --config api-codegen.types.yaml oas/generated/openapi.json",
        "oas:codegen:server": "oapi-codegen --config api-codegen.server.yaml oas/generated/openapi.json",
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable"
    }
}
