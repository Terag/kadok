; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space

[*.json]
indent_size = 4
indent_style = space

[*.yaml,*.yml]
indent_size = 2
indent_style = space

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
eclint_indent_style = unset

[{go.mod,go.sum,*.go,.gitmodules}]
indent_style = space
indent_size = 4

[*.tmpl]
insert_final_newline = false

[Dockerfile]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
